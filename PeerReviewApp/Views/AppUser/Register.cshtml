@model RegisterVm

@{
    ViewData["Title"] = "Register";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container d-flex justify-content-center registerForm mt-5">
    <form method="post" asp-action="Register" style="width: 100%">
        <div class="form-group row registerInput mb-3">
            <div class="col-4"><label>Email:</label></div>
            <div class="col-8 flex-grow-1">
                <input asp-for="Email" class="form-control"/>
            </div>
        </div>
        <div class="form-group row registerInput mb-3">
            <div class="col-4"><label>Username:</label></div>
            <div class="col-8 flex-grow-1">
                <input asp-for="Username" class="form-control"/>
            </div>
        </div>
        <div class="form-group row registerInput mb-3">
            <div class="col-4"><label>Password:</label></div>
            <div class="col-8 flex-grow-1">
                <input type="password" asp-for="Password" class="form-control"/>
            </div>
        </div>
        <div class="form-group row registerInput mb-3">
            <div class="col-4"><label>Confirm Password:</label></div>
            <div class="col-8 flex-grow-1">
                <input type="password" asp-for="ConfirmPassword" class="form-control"/>
            </div>
        </div>
        <div class="form-group row registerInput mb-3">
            <div class="col-4"><label>Instructor Code:</label></div>
            <div class="col-8 flex-grow-1">
                <input asp-for="InstructorCode" value="" class="form-control" placeholder="Leave blank if student"/>
            </div>
        </div>

        <!-- Register Button -->
        <div class="row pt-3">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div class="col-2"></div>
            <div class="col-8">
                Already registered? <a asp-action="LogIn">Log In</a>
            </div>
        </div>

        <div class="row pt-3">
            <span asp-validation-for="Username" class="text-danger"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
            <span asp-validation-for="InstructorCode" class="text-danger"></span>
        </div>
    </form>
</div>
