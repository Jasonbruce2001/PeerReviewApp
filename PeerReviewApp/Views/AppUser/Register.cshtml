@model PeerReviewApp.Models.RegisterVm
@{
    ViewData["Title"] = "Register";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container d-flex justify-content-center registerForm">
    <form method="post" asp-action="Register" style="width: 100%">
        <div class="form-group row registerInput">
            <div class="col-4"><label>Username:</label></div>
            <div class="col-8 flex-grow-1">
                <input asp-for="Username" class="form-control" />
            </div>
        </div>

        <div class="form-group row registerInput">
            <div class="col-4"><label>Password:</label></div>
            <div class="col-8 flex-grow-1">
                <input type="password" asp-for="Password" class="form-control" />
            </div>
        </div>

        <div class="form-group row registerInput">
            <div class="col-4"><label>Confirm Password:</label></div>
            <div class="col-8 flex-grow-1">
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>

        <div class="form-group row registerInput">
            <div class="col-4"><label>Role:</label></div>
            <div class="col-8 flex-grow-1">
                <select asp-for="SelectedRole" asp-items="Model.AvailableRoles" class="form-control"></select>
            </div>
        </div>

        <!-- Register Button -->
        <div class="row pt-3">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div class="col-2"></div>
            <div class="col-8">
                Already registered? <a asp-action="LogIn">Log In</a>
            </div>
        </div>

        <div class="row pt-3">
            <span asp-validation-for="Username" class="text-danger"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </form>
</div>